@{
    this.ViewData["Title"] = "Преглед на книга";
}
@model ELibrary.Web.ViewModels.Home.ViewBookViewModel
    <form action="Index" method="post">

        <!-- ***** Contact Area Start ***** -->
        <section class="dento-contact-area mt-50 mb-100">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        @if (Model.Logo != null)
                        {
                            <img src="@Model.Logo" alt="Alternate Text" class="google-maps mb-100" />
                        }
                        else
                        {
                            <img src="~/img/BooksLogo/defaultLogo.jpg" alt="Alternate Text" class="google-maps mb-100" />
                        }
                    </div>
                </div>

                <div class="row">
                    <!-- Contact Information -->
                    <div class="col-12 col-md-4">
                        <div class="contact-information">
                            <h5>Заглавие</h5>
                            <p> @Model.Title</p>

                            <h5>Автор</h5>
                            <p>@Model.Author</p>

                            <h5>Жанр</h5>
                            <p>@Model.GenreName</p>

                            <h5>Качена от</h5>
                            <p class="mb-0">
                                @Model.UserFirstName @Model.UserLastName @Model.UserEmailName
                            </p>
                        </div>
                    </div>

                    <!-- Contact Form -->
                    <div class="col-12 col-md-8">
                        <div class="contact-form">
                            <!-- Section Heading -->
                            <div class="section-heading">
                                <h2>Резюме на книгата</h2>
                                <div class="line"></div>
                            </div>
                            <!-- Form -->
                            <div class="row">
                                <div class="col-lg-12">
                                    <p>
                                        @Model.Review
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
