@model ELibrary.Web.ViewModels.Administration.AddGenreViewModel

@{
    ViewData["Title"] = "Добавяне на нова жанр";
}

<form asp-action="GenreEditing" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-12">
            @if (ViewData["message"] != null)
            {
                <div class="alert alert-info" role="alert">

                    @ViewData["message"]
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-7">
            <div class="form-group">
                <label asp-for="Name" class="control-label">Име на жанр</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-5">
        </div>
        <input type="submit" value="Редактирай" class="col-md-2 btn btn-primary" />

    </div>
</form>

<script>
    function setTwoNumberDecimal(event) {
        this.value = parseFloat(this.value).toFixed(2);
    }
</script>

