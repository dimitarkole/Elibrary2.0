
@{
    ViewData["Title"] = "Профил";
}

@model ELibrary.Web.ViewModels.CommonResurces.ProfilViewModel
    <form asp-action="Profile" asp-route-returnUrl="@ViewData["URL"]">
        <!-- ***** Contact Area Start ***** -->
        <section class="dento-contact-area mt-50 mb-100">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        @if (Model.Photo != null)
                        {
                            <img src="@Model.AvatarLocation" alt="Alternate Text" class="google-maps mb-100" />
                        }
                        else
                        {
                            <img src="~/img/Avatars/defaultAvatar.png" alt="Avatar" class="google-maps mb-100" />
                        }
                    </div>
                </div>

                <div class="row">
                    <!-- Contact Information -->
                    <div class="col-12 col-md-4">
                        <div class="contact-information">
                            <h5>Име</h5>
                            <p> @Model.FirstName</p>

                            <h5>Фамилия</h5>
                            <p>@Model.LastName</p>

                            <h5>Email</h5>
                            <p>@Model.Email</p>

                            <h5>Качена от</h5>
                            <p class="mb-0">???</p>
                        </div>
                    </div>

                    <!-- Contact Form -->
                    <div class="col-12 col-md-8">
                        <div class="section-heading">
                            <h2>Информация за активноста ви</h2>
                            <div class="line"></div>
                        </div>
                        <!-- Form -->
                        <div class="row">
                            <div class="col-lg-12">
                                <p>
                                    <div class="col-12 col-md-8">
                                        <div class="row">

                                            @foreach (var data in Model.ActivityData)
                                            {
                                                <div class="col-6 col-md-6">
                                                    <div class="row">

                                                        @data.Key - @data.Value
                                                    </div>

                                                </div>

                                            }
                                        </div>

                                    </div>
                                </p>
                            </div>
                        </div>
                    </div>
                    </div>
                </div>
        </section>
        <!-- ***** Contact Area End ***** -->
    </form>
